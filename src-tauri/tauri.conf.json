{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "hurriyet",
  "version": "0.0.1",
  "identifier": "org.ulusgroup.hurriyet",
  "build": {
    "beforeDevCommand": "deno run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno run build",
    "frontendDist": "../dist"
  },

  "app": {
    "windows": [
      {
        "shadow": true,
        "browserExtensionsEnabled": false,
        "hiddenTitle": true,
        "resizable": false,
        "decorations": false,
        "visible": true,
        "width": 300,
        "height": 500,
        "title": "hurriyet"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
