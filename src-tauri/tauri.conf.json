{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "hurriyet",
  "version": "0.1.0",
  "identifier": "org.ulusgroup.hurriyet",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "skipTaskbar": true,
        "shadow": true,
        "browserExtensionsEnabled": false,
        "hiddenTitle": true,
        "resizable": false,
        "decorations": false,
        "visible": true,
        "alwaysOnTop": true,
        "width": 300,
        "height": 500
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "windows": {
      "webviewInstallMode": {
        "silent": true,
        "type": "downloadBootstrapper"
      },
      "wix": {
        "language": "tr-TR"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
